<h1>Add new student</h1>

<%= form_tag :action => 'create' do %>
<p><label for = "student_user_id">Username</label>:

<%= text_field 'students', 'user_id' %></p>
<p><label for = "student_name">Name</label>:

<%= text_field 'students', 'name' %></p>
<p><label for = "student_year">School year</label>:

<%= number_field 'students', 'school_year' %></p>
<p><label for = "student_password">Password</label>:

<%= password_field 'students', 'password' %></p>
<%= submit_tag "Create" %>

<% end -%>
<%= link_to 'Back', {:action => 'list'} %>